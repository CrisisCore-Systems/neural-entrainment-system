{
  "name": "neural-entrainment-backend",
  "version": "1.0.0",
  "description": "CrisisCore Neural Interface - Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:test": "NODE_ENV=test tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:chromium": "playwright test --project=chromium",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run type-check && npm run test:run"
  },
  "keywords": [
    "neural-entrainment",
    "binaural-beats",
    "fastify",
    "api"
  ],
  "author": "CrisisCore Systems",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/websocket": "^10.0.1",
    "@react-three/postprocessing": "^3.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "pg": "^8.16.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.13",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "vitest": "^1.6.1"
  }
}
