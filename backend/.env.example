# Environment Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neural_entrainment
DB_HOST=localhost
DB_PORT=5432
DB_NAME=neural_entrainment
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379
# On Windows, prefer 127.0.0.1 to avoid IPv6 (::1) differences
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Feature Flags (Development only)
DISABLE_DATABASE=false
DISABLE_REDIS=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,https://crisiscore-systems.github.io

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=900000

# Logging
LOG_LEVEL=info
